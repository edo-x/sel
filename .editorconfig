root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.{json}]
indent_size = 2
indent_style = space

[*.{js,ts,jsx,tsx}]
indent_size = 4
indent_style = tab

[*.{css,scss,sass}]
indent_size = 4
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
